<?xml version="1.0" ?>
<extension type="component" version="2.5.0" method="upgrade">
	<name>com_salesforce</name>
	<author>Foysal Iqbal</author>
	<authorEmail>foysal.iqbal@gmail.com</authorEmail>
	<creationDate>August 2015</creationDate>
	<version>1.0.0</version>
	<description>This is the first joomla salesforce component</description>
	<files folder="components/com_salesforce">
		<folder>assets</folder>
		<folder>controllers</folder>
		<folder>models</folder>
		<folder>soapclient</folder>
		<folder>views</folder>	
		<filename>controller.php</filename>
		<filename>salesforce.php</filename>
		<filename>index.html</filename>
	</files>
	<languages folder="language/en-GB">
		<language tag="en-GB">en-GB.com_salesforce.ini</language>
	</languages>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.sql</file>
		</sql>
	</uninstall>
	<administration>
		<files folder="administrator/components/com_salesforce">
			<filename>controller.php</filename>
			<filename>salesforce.php</filename>
			<filename>index.html</filename>
			<filename>install.sql</filename>
			<filename>uninstall.sql</filename>
			<filename>config.xml</filename>
			<folder>assets</folder>
			<folder>classes</folder>
		</files>
		<languages folder="administrator/language/en-GB">
			<language tag="en-GB">en-GB.com_salesforce.ini</language>
			<language tag="en-GB">en-GB.com_salesforce.sys.ini</language>
		</languages>
		<menu link="option=com_salesforce" img="components/com_salesforce/assets/images/sf-16x16.png">COM_SALESFORCE</menu>
	</administration>
</extension>
